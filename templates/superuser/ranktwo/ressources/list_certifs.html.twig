{% extends "@backend_root/base.html.twig" %}

{% block title %}{{provider.name}} - Certification List{% endblock %}

{% block scriptsheet %}
    <script>
        document.getElementById("ressources_index").classList.add("link-active");
    </script>
{% endblock %}

{% block form %}
    <div class = "form_container">
        <a href="{{ path("ressources_index")}}"><button class="btn back_button">Go Back</button></a>
        
        <div class = "admin_list_header">
            <h1>All certifications of Provider {{provider.name}} :</h1>
            <div class="buttons_container">
                <a href="{{ path("certif_new", {'id': provider.id}) }}"><button class="btn add_button">New</button></a>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Exams</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for certification in provider.getCertifications() %}
                <tr>
                    {% set countExams = certification.getExams().count() %}
                    <td>{{ certification.id }}</td>
                    <td>{{ certification.title }}</td>
                    <td>{{ countExams }} </td>
                    <td>
                        <a href="{{ path('certif_exams_list', {'id': certification.id}) }}">exams</a>
                        <a href="{{ path('certif_edit', {'id': certification.id}) }}">edit</a>
                        <form method="post" action="{{ path('certif_delete', {'id': certification.id}) }}" onsubmit="return confirm('Are you sure you want to delete this CERTIFICATION? {{ countExams }} exams WILL be deleted from the database.');" class = "btn-delete">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ certification.id) }}">
                            <button class="btn-link">delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}